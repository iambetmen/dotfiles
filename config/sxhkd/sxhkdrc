super + p
    dmenu_run -b

super + shift + Return
    urxvt

super + shift + c
    killwa $(pfw)

super + Down
	wmv 0 20 $(pfw)

super + Up
	wmv 0 -20 $(pfw)

super + Right
	wmv 20 0 $(pfw)

super + Left
	wmv -20 0 $(pfw)

super + shift + Down
	wrs 0 20 $(pfw)

super + shift + Up
	wrs 0 -20 $(pfw)

super + shift + Right
	wrs 20 0 $(pfw)

super + shift + Left
	wrs -20 0 $(pfw)

super + m
	sh ~/etc/scripts/fullscreen.sh $(pfw)

super + Tab
	sh ~/etc/scripts/focus.sh next

super + g
	sh ~/etc/scripts/middles g

super + Escape
    pkill -USR1 -x sxhkd

super + shift + Q
	pkill swm
